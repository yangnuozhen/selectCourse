<Window x:Class="SelectCourseGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SelectCourseGUI"
        mc:Ignorable="d"
        Title="TWSelectCourse GUI" Height="810" Width="1440" Background="#FF1A1A1A" Foreground="White" Loaded="Window_Loaded">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Height="55" TextWrapping="Wrap" VerticalAlignment="Top" Width="540" Margin="80,65,0,0" FontFamily="Segoe UI Black" FontWeight="Bold" FontSize="36" Text="TWSelectCourse GUI | BETA"/>
        <TextBlock HorizontalAlignment="Left" Height="50" TextWrapping="Wrap" VerticalAlignment="Top" Width="360" Margin="80,140,0,0" FontFamily="Source Code Pro Black" FontSize="24"><Run Language="zh-cn" Text="| 天蛙云选课自动抢课"/></TextBlock>
        <Button x:Name="LoginBtn" Content="登录天蛙" HorizontalAlignment="Center" Height="63" Margin="0,432,0,0" VerticalAlignment="Top" Width="220" Visibility="Collapsed"/>
        <ListView Margin="80,230,800,165" Background="#FF3A3A3A" Foreground="White" BorderBrush="#FF6B6F75" Height="400" FontSize="16" d:ItemsSource="{d:SampleData ItemCount=5}" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.View>

                <GridView AllowsColumnReorder="true"
              ColumnHeaderToolTip="Employee Information">

                    <GridViewColumn DisplayMemberBinding=
                          "{Binding Path=FirstName}" 
                      Header="序号" Width="100"/>

                    <GridViewColumn DisplayMemberBinding=
                          "{Binding Path=LastName}" 
                      Width="100"
                      Header="任务名称"/>

                    <GridViewColumn DisplayMemberBinding=
                          "{Binding Path=EmployeeNumber}" 
                      Header="Employee No." Width="100"/>
                </GridView>

            </ListView.View>
        </ListView>

    </Grid>
</Window>
